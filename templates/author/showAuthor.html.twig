{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
  <h1>{{ author.username }}</h1>
  <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="200">
  <p><strong>Email:</strong> {{ author.email }}</p>
  <p><strong>Number of books:</strong> {{ author.nb_books }}</p>

  <p><a href="{{ path('author_list') }}">‚Üê Back to list</a></p>
{% endblock %}
